{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "allowJs": true,
        "strict": false,
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"]
        },
        "types": ["vite/client"]
    },
    "include": [
        "resources/**/*.ts",
        "resources/**/*.d.ts",
        "resources/**/*.vue"
    ]
}
